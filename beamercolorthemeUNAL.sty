%------------------
% Define colours
%------------------
\definecolor{UNALVerde}{RGB}{148,180,59}
\definecolor{UNALRojo}{RGB}{166,28,49}
%
\definecolor{UNALVerdeOscuro}{RGB}{70,107,63}
\definecolor{UNALRojoOscuro}{RGB}{118,35,47}
\definecolor{UNALGrisOscuro}{RGB}{80,90,92}
\definecolor{UNALGrisClaro}{RGB}{177,178,176}
%
\definecolor{UNALGris}{RGB}{230,230,230}
\definecolor{UNALVioleta}{RGB}{181,14,127}
\definecolor{UNALNaranja}{RGB}{231,86,55}
\definecolor{UNALBeige}{RGB}{241,230,203}
\definecolor{UNALAmarillo}{RGB}{243,183,60}
\definecolor{UNALVerdeClaro}{RGB}{64,176,143}
\definecolor{UNALAzulClaro}{RGB}{44,109,175}
\definecolor{UNALAzulOscuro}{RGB}{53,64,143}
%------------------
% Background colour for all frames
%------------------
\setbeamercolor{background canvas}{bg=UNALGris!40}
%------------------
% Normal text
%------------------
\setbeamercolor{normal text}{fg=black}
%------------------
% First page
%------------------
\setbeamercolor*{title}{fg=UNALAzulOscuro}
\setbeamercolor*{subtitle}{fg=UNALAzulClaro}
\setbeamercolor*{author}{fg=UNALAzulOscuro}
\setbeamercolor*{institute}{fg=UNALGrisOscuro}
\setbeamercolor*{date}{fg=UNALGrisOscuro}
%------------------
% Generic frames header and footer
%------------------
\setbeamercolor{titlelike}{fg=black}
\setbeamercolor*{frametitle}{fg=UNALAzulOscuro}
\setbeamercolor*{framesubtitle}{fg=UNALAzulOscuro}
\setbeamercolor*{title in head/foot}{fg=UNALAzulOscuro}
\setbeamercolor*{author in head/foot}{fg=UNALAzulOscuro}
%------------------
% Blocks
%------------------
\setbeamercolor{block title}{bg=UNALVerdeOscuro!30,fg=UNALAzulOscuro}
\setbeamercolor{block title alerted}{bg=UNALRojoOscuro!30,fg=UNALAzulOscuro}
\setbeamercolor{block title example}{bg=UNALAzulOscuro!30,fg=UNALAzulOscuro}
\setbeamercolor{block body}{bg=UNALVerdeOscuro!5,fg=black}
\setbeamercolor{block body alerted}{bg=UNALRojoOscuro!5,fg=black}
\setbeamercolor{block body example}{bg=UNALAzulOscuro!5,fg=black}
%------------------
% Lists
%------------------
\setbeamercolor*{item}{fg=UNALRojo}
%------------------
% Quotation and quote
%------------------
\setbeamercolor*{quotation}{fg=UNALAzulOscuro,bg=UNALVerde!10}
%------------------
% Verse
%------------------
\setbeamercolor*{verse}{fg=UNALRojo,bg=UNALGrisOscuro!10}
%------------------
% Abstract
%------------------
\setbeamercolor*{abstract}{fg=black,bg=UNALRojo!10}
%------------------
% Table of contents
%------------------
\setbeamercolor{section in toc}{fg=UNALAzulOscuro}
\setbeamercolor{subsection in toc}{fg=UNALGrisOscuro}
%------------------
% Bibliography
%------------------
\setbeamercolor*{bibliography entry title}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry location}{fg=black!50}
\setbeamercolor*{bibliography entry note}{fg=black!50}
%------------------
% Others
%------------------
\setbeamercolor*{alerted text}{fg=UNALRojo,bg=white}
