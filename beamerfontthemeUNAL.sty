%------------------
% Default font
%------------------
\usefonttheme{professionalfonts}
%------------------
% Font sizes and styles
%------------------
\setbeamerfont{title}{series=\scshape,size=\huge}
\setbeamerfont{subtitle}{series=\mdseries,size=\Large}
\setbeamerfont{author}{series=\bfseries,size=\large}
\setbeamerfont{institute}{series=\mdseries,size=\normalsize}
\setbeamerfont{date}{series=\mdseries,size=\normalsize}
%
\setbeamerfont{frametitle}{series=\scshape,size=\huge}
\setbeamerfont{framesubtitle}{series=\mdseries,size=\large}
\setbeamerfont{footline}{size=\scriptsize}
\setbeamerfont{title in head/foot}{size=\footnotesize}
\setbeamerfont{author in head/foot}{size=\footnotesize}
%
\setbeamerfont{block title}{series=\bfseries,size=\normalsize}
\setbeamerfont{block title alerted}{series=\bfseries,size=\normalsize}
\setbeamerfont{block title example}{series=\bfseries,size=\normalsize}
